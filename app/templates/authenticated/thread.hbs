{{! @glint-nocheck }}
{{#unless this.isError}}
  {{page-title this.pageTitle}}

  <Nav::Routes::Thread
    @threadId={{@model.threadId}}
    @thread={{this.currentOrPreviousThread}}
    @postId={{@model.postId}}
    @page={{this.currentPage}}
  />

  <Routes::Thread::Page
    @thread={{this.currentOrPreviousThread}}
    @lastReadPost={{@model.lastReadPost}}
    @loading={{this.showSkeletonPage}}
  />
{{else}}
  {{page-title '404'}}
  <Misc::Error::NotFound />
{{/unless}}